<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/about_activity"
    tools:context="onl.deepspace.zoorallye.AboutActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <ImageView
            android:id="@+id/deepspace_logo"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:src="@drawable/deepspace_logo"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:textSize="23sp"
            android:textColor="#555"
            android:gravity="center"
            android:text="@string/about_header"/>
        <TextView
            android:id="@+id/about_authors"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="13dp"
            android:textSize="16sp"
            android:textColor="#555"
            android:gravity="center"
            android:text="@string/about_authors"/>

        <ImageView
            android:id="@+id/wgs_logo"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:src="@drawable/wgs_logo"/>

    </LinearLayout>

</ScrollView>